{
    "name": "@purinton/voicetest",
    "type": "module",
    "version": "1.0.18",
    "description": "VoiceTest: a real-time voice-enabled Discord bot that streams speech to OpenAI GPT-4o and plays AI-driven voice responses.",
    "main": "voicetest.mjs",
    "scripts": {
        "start": "node voicetest.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/voicetest.git"
    },
    "keywords": [
        "discord",
        "voice",
        "openai",
        "gpt-4o",
        "realtime",
        "bot",
        "voicetest"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/voicetest/issues"
    },
    "homepage": "https://github.com/purinton/voicetest#readme",
    "devDependencies": {
        "jest": "^30.0.4"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@discordjs/opus": "^0.10.0",
        "@discordjs/voice": "^0.18.0",
        "@purinton/common": "^1.0.17",
        "@purinton/discord": "^1.0.14",
        "@purinton/mcp-client": "^1.0.7",
        "@purinton/openweathermap": "^1.0.5",
        "@purinton/resampler": "^1.0.3",
        "dotenv": "^17.2.0",
        "node-fetch": "^3.3.2"
    }
}